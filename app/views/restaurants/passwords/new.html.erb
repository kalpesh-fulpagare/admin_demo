<%- content_for :title, "Forgot your password?" %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
  <div class="control-group">
    <div class="controls"><h4>Forgot your password?</h4></div>
  </div>
  <div class="control-group">
    <%= f.label :email, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :email, class: "form-control", autofocus: true %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= submit_tag "Send me reset password instructions", data: {disable_with: "Please wait, validating..."}, class: "btn btn-primary" %>
    </div>
  </div>
  <%= render "super_admin/shared/links" %>
<% end %>