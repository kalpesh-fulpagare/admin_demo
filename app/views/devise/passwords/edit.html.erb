<%- content_for :title, "Change your password" %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {role: "form", class: "validate form-horizontal", method: :put}) do |f| %>
  <%= html_errors resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
      <h3>Change your password</h3>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, "New password", class: "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.password_field :password, class: "form-control", auofocus: true, id: "passwordField", data: {rules: {required: true, minlength: 6, lettersnumbers: true}} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password", class: "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.password_field :password_confirmation, class: "form-control", auofocus: true, data: {rules: {required: true, minlength: 6, lettersnumbers: true, equalTo: "#passwordField"}} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
      <%= f.submit "Update password", data: { disable_with: "Updating password..." }, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>