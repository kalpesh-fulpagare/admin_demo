<%- content_for :title, "Forgot your password?" %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {role: "form", class: "validate form-horizontal", method: :post}) do |f| %>
  <%= html_errors resource %>
  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
      <h3>Forgot your password?</h3>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :email, class: "form-control", auofocus: true, data: {rules: {required: true, nowhitespace: true, email: true}, messages: {required: "Please enter email"}} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
      <%= f.submit "Send me reset password instructions", data: { disable_with: "Please wait..." }, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>