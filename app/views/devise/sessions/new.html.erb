<%- content_for :title, "Sign in" %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {role: "form", class: "validate form-horizontal"}) do |f| %>
  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
      <h3>Sign in</h3>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :email, class: "form-control", auofocus: true, data: {rules: {required: true, nowhitespace: true, email: true}, messages: {required: "Please enter email"}} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.password_field :password, class: "form-control", data: {rules: {required: true, minlength: 6, lettersnumbers: true}, messages: {required: "Please enter password"}} %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> Stay signed in
          </label>
        </div>
      </div>
    </div>
  <% end -%>
  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
      <%= f.submit "Login", data: { disable_with: "Authenticating..." }, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>